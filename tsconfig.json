{
  "compilerOptions": {
    "target": "es2017",                                     
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
